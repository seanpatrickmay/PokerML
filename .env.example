# PokerML configuration
# Copy this file to `.env` and adjust values to tune solver behaviour.

# Comma-separated bet sizes expressed as multiples of the current pot.
BET_SIZINGS=0.3333333333,1.0,2.0,10.0

# Candidate sizes used by heuristic range splitting.
HEURISTIC_BET_SIZINGS=0,0.25,0.3333333333,0.5,0.75,1,1.3333333333,1.5,2,3,5,10

# Maximum search depth for the minimax solver.
SEARCH_MAX_DEPTH=20

# Parameters controlling Monte Carlo sampling within equity evaluations.
MONTE_CARLO_BASE=10
MONTE_CARLO_DECAY_START=4
MONTE_CARLO_MIN_SAMPLES=1
